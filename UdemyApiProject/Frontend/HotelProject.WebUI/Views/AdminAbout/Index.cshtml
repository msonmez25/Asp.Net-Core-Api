@model List<ViewAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hakkımızda</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="tbl1">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık 1</th>
                                        <th>Başlık 2</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AboutID</td>
                                            <td>@item.Title1</td>
                                            <td>@item.Title2</td>
                                            <td>
                                                <span>

                                                    <a href="/AdminAbout/UpdateAbout/@item.AboutID" class="btn mb-1 btn-success">
                                                        Güncelle <span class="btn-icon-right"><i class="fa fa-pencil"></i></span>
                                                    </a>

                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<br />




<script src="@Url.Content("~/js/jquery-3.6.0.min.js")"></script>
<script src="~/adminweb/plugins/tables/js/jquery.dataTables.min.js"></script>
<script src="~/adminweb/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
<script src="~/adminweb/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>

<script>

