@model AddSendMessageDto
@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <div class="email-left-box">
                            <a href="/AdminContact/Inbox/" class="btn btn-primary btn-block">Gelen Mesajlar</a>

                            @await Html.PartialAsync("SideBarAdminContactPartial")

                            <h5 class="mt-5 m-b-10">Categories</h5>

                            @await Html.PartialAsync("SideBarAdminContactCategoryPartial")

                        </div>
                        <div class="email-right-box">
                            <div class="toolbar" role="toolbar">
                                <div class="btn-group m-b-20">
                                    <button type="button" class="btn btn-light">
                                        <i class="fa fa-archive"></i>
                                    </button>
                                    <button type="button" class="btn btn-light">
                                        <i class="fa fa-exclamation-circle"></i>
                                    </button>
                                    <button type="button" class="btn btn-light">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="compose-content mt-5">
                                <form method="post">

                                    <div class="form-group">
                                        <input type="text" required class="form-control bg-transparent" asp-for="ReceiverName" placeholder=" Alıcı Ad Soyad">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" required class="form-control bg-transparent" asp-for="ReceiverMail" placeholder=" Alıcı Mail">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" required class="form-control bg-transparent" asp-for="Subject" placeholder=" Konu">
                                    </div>
                                    <div class="form-group">
                                        <textarea required class="textarea_editor form-control bg-light" rows="15" asp-for="Message" placeholder="Mesajınızı yazabilirsiniz ..."></textarea>

                                        @* <h5 class="m-b-20"><i class="fa fa-paperclip m-r-5 f-s-18"></i> Attatchment</h5>
                                        <form action="#" class="dropzone">
                                        <div class="form-group">
                                        <div class="fallback">
                                        <input class="l-border-1" name="file" type="file" multiple="multiple">
                                        </div>
                                        </div>
                                        </form> *@
                                    </div>
                                    <div class="text-left m-t-15">
                                        <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10">
                                            <i class="fa fa-paper-plane m-r-5"></i> Gönder
                                        </button>

                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
