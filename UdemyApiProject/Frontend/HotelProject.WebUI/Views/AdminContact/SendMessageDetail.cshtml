@model SendMessageByIdDto
@{
    ViewData["Title"] = "SendMessageDetail";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <div class="email-left-box">
                            <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>

                            @await Html.PartialAsync("SideBarAdminContactPartial")

                            <h5 class="mt-5 m-b-10">Kategoriler</h5>

                            @await Html.PartialAsync("SideBarAdminContactCategoryPartial")

                        </div>
                        <div class="email-right-box">
                            <div role="toolbar" class="toolbar">
                                <div class="btn-group">
                                    <a href="/AdminContact/Inbox/" class="btn btn-dark btn-block">Gelen Mesajlar</a>
                                </div>
                            </div>
                            <br />
                            <h4 class="card-title">Giden Mesajlar</h4>

                            <div class="read-content">
                                <div class="media pt-5">
                                    <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
                                    <div class="media-body">
                                        <h5 class="m-b-3">@Model.ReceiverName </h5>
                                        <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MM-yyy"))</p>
                                    </div>

                                </div>
                                <hr>
                                <div class="media mb-4 mt-1">
                                    <div class="media-body">
                                        <span class="float-right">@(((DateTime)Model.Date).ToString("HH:MM"))</span>
                                        <h4 class="m-0 text-primary"><b>Konu: </b>@Model.Subject</h4>
                                        <small class="text-muted"><strong>Alıcı: </strong>@Model.ReceiverMail</small><br />
                                        <small class="text-muted"><strong>Gönderen: </strong>@Model.SenderMail</small>
                                    </div>
                                </div>
                                <p>@Model.Message</p>
                                <hr>
                            </div>
                            <!-- panel -->

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>