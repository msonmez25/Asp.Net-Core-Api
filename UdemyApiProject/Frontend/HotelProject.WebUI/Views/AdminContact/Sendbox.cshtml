@model List<SendboxContactDto>
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <div class="email-left-box">
                            <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>

                            @* @await Html.PartialAsync("SideBarAdminContactPartial") *@

                            <div class="mail-list mt-4">

                                <a href="/AdminContact/Inbox/" class="list-group-item border-0 text-dark p-r-0">
                                    <i class="fa fa-inbox font-18 align-middle mr-2"></i>
                                    <b>Gelen Kutusu</b>
                                    <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.contactCount</span>
                                </a>

                                <a href="/AdminContact/Sendbox/" class="list-group-item border-0 text-dark p-r-0">
                                    <i class="fa fa-paper-plane font-18 align-middle mr-2"></i>
                                    <b>Giden Kutusu</b>
                                    <span class="badge badge-success badge-sm float-right m-t-5">@ViewBag.sendMessageCount</span>
                                </a>

                                <a href="#" class="list-group-item border-0  text-dark p-r-0">
                                    <i class="fa fa-star-o font-18 align-middle mr-2"></i>
                                    <b>Önemli</b>
                                    <span class="badge badge-danger badge-sm float-right m-t-5">4</span>
                                </a>

                                <a href="#" class="list-group-item border-0  text-dark p-r-0">
                                    <i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>
                                    <b>Taslaklar</b>
                                    <span class="badge badge-warning badge-sm float-right m-t-5">18</span>
                                </a>

                                <a href="#" class="list-group-item border-0  text-dark p-r-0">
                                    <i class="fa fa-trash font-18 align-middle mr-2"></i>
                                    <b>Çöp Kutusu</b>
                                    <span class="badge badge-info badge-sm float-right m-t-5">36</span>
                                </a>

                            </div>

                            <h5 class="mt-5 m-b-10">Kategoriler</h5>

                            @await Html.PartialAsync("SideBarAdminContactCategoryPartial")

                        </div>
                        <div class="email-right-box">
                            <div role="toolbar" class="toolbar">
                                <div class="btn-group">
                                    <a href="/AdminContact/Inbox/" class="btn btn-dark btn-block">Gelen Mesajlar</a>
                                </div>
                            </div>
                            <br />
                            <h4 class="card-title">Giden Mesajlar</h4>

                            <div class="email-list m-t-15">
                                @foreach (var item in Model)
                                {
                                    <div class="message">
                                        <a href="/AdminContact/SendMessageDetail/@item.SendMessageID">
                                            <div class="col-mail col-mail-1">
                                                <div class="email-checkbox">
                                                    <input type="checkbox" id="chk2">
                                                    <label class="toggle" for="chk2"></label>
                                                </div><span class="star-toggle ti-star"></span>
                                            </div>
                                            <div style="display: flex;justify-content: space-between;flex-direction: row">
                                                <div class="subject"><b>Alıcı: </b>@item.ReceiverName</div>
                                                <div class="subject"><b>Konu: </b>@item.Subject</div>
                                                <div class="date" style="padding-left:0px">@(((DateTime)item.Date).ToString("dd-MM-yyy HH:MM"))</div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                            <!-- panel -->

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>