@model List<ViewContactWithCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">İletişim Sayfası</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="tbl1">
                                <thead>
                                    <tr>
                                        <th>#</th>                                       
                                        <th>Mesaj Kategori</th>
                                        <th>Ad Soyad</th>
                                        <th>Mail</th>
                                        <th>Konu</th>
                                        <th>Mesaj</th>
                                        <th>Tarih</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ContactID</td>
                                            <td>@item.MessageCategoryName</td>
                                            <td>@item.Name</td>
                                            <td>@item.Mail</td>
                                            <td>@item.Subject</td>
                                            <td>@item.Message</td>
                                            <td>@item.Date</td>
                                           @* 
                                            <td>
                                                <span>

                                                    <a href="/AdminContactWithCategory/DetailContact/@item.ContactID" class="btn mb-1 btn-info">
                                                        Detay <span class="btn-icon-right"><i class="fa fa-exclamation"></i></span>
                                                    </a>

                                                </span>
                                            </td> *@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<br />




<script src="@Url.Content("~/js/jquery-3.6.0.min.js")"></script>
<script src="~/adminweb/plugins/tables/js/jquery.dataTables.min.js"></script>
<script src="~/adminweb/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
<script src="~/adminweb/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>

<script>

