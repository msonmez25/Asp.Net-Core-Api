@model AddGuestDto
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <form method="post">
                            <label>Misafir Adı</label>
                            <input type="text" class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <br />
                            <label>Misafir Soyadı</label>
                            <input type="text" class="form-control" asp-for="Surname">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                            <br />
                            <label>Misafir Şehir</label>
                            <input type="text" class="form-control" asp-for="City">
                            <span asp-validation-for="City" class="text-danger"></span>
                            <br />

                            <button class="btn mb-1 btn-primary">
                                Misafir Ekle <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>

                            <a href="/AdminGuest/Index/" class="btn mb-1 btn-warning">
                                Misafirler listesine Dön <span class="btn-icon-right"><i class="fa fa-backward"></i></span>
                            </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>