@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Kullanıcılar Listesi</h4>
                        <div class="active-member">
                            <div class="table-responsive">
                                <table class="table table-xs mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Ad Soyad</th>
                                            <th>Rol Ata</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">
                                                </td>
                                                
                                                <td>@item.Name @item.Surname</td>
                                               
                                                <td>

                                                    <a href="/AdminRoleAssign/AssAssignRole/@item.Id" class="btn mb-1 btn-info">
                                                        Rol Ata <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

