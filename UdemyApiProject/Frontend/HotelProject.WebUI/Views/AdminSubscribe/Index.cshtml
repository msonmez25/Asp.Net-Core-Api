@model List<ViewSubscribeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Mail Bülteni Üyeleri</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="tbl1">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Mail Adresi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            @if (item.Mail == null)
                                            {
                                                <td style="color:red">Yanlış kaydedilmiş mail adresi !!!</td>
                                            }
                                            @if (item.Mail != null)
                                            {
                                            <td>@item.Mail</td>
                                            }
                                            
                                            <td>
                                                <span>

                                                    <a href="/AdminSubscribe/UpdateSubscribe/@item.SubscribeID" class="btn mb-1 btn-success">
                                                        Güncelle <span class="btn-icon-right"><i class="fa fa-pencil"></i></span>
                                                    </a>

                                                    <a href="/AdminSubscribe/DeleteSubscribe/@item.SubscribeID" class="btn mb-1  btn-danger">
                                                        Sil <span class="btn-icon-right"><i class="fa fa-trash"></i></span>
                                                    </a>

                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






<script src="@Url.Content("~/js/jquery-3.6.0.min.js")"></script>
<script src="~/adminweb/plugins/tables/js/jquery.dataTables.min.js"></script>
<script src="~/adminweb/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
<script src="~/adminweb/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>

