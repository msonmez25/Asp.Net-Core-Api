@model List<ViewAppUserListWithLocationDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<h4 class="card-title">Kullanıcılar Listesi</h4>
<div class="active-member">
    <div class="table-responsive">
        <table class="table table-xs mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Çalıştığı Şube</th>
                    <th>Çalıştığı İl</th>
                    <th>Doğum Yeri</th>
                    <th>Cinsiyet</th>
                    <th>Durum</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">
                        </td>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.WorkLocationName</td>
                        <td>@item.WorkLocationCity</td>
                        <td>@item.City</td>
                        <td>@item.Gender</td>


                        @if (item.Status == true)
                        {
                            <td>
                                <i class="fa fa-smile-o text-success  mr-2"></i> Aktif
                            </td>
                        }
                        @if (item.Status == false)
                        {
                            <td>
                                <i class="fa fa-frown-o text-danger  mr-2"></i> Pasif
                            </td>
                        }

                        <td>
                            <button class="btn mb-1 btn-outline-danger">Sil</button>
                        </td>
                        <td>
                            <button class="btn mb-1 btn-outline-success">Güncelle</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Register/Index" class="btn btn-primary" target="_blank">Yeni Kullanıcı Ekle</a>