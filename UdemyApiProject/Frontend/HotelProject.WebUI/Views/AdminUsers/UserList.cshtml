@model List<ViewAppUserListDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Kullanıcılar Listesi</h4>
                        <div class="active-member">
                            <div class="table-responsive">
                                <table class="table table-xs mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Ad Soyad</th>
                                            <th>Şehir</th>
                                            <th>Ülke</th>
                                            <th>Cinsiyet</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            
                                            <tr>
                                                <td>
                                                    <img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">
                                                </td>
                                                <td>@item.Name @item.Surname</td>
                                                <td>@item.Country</td>
                                                <td>@item.City</td>
                                                <td>@item.Gender</td>


                                                @if (item.Status == true)
                                                {
                                                    <td>
                                                        <i class="fa fa-smile-o text-success  mr-2"></i> Aktif
                                                    </td>
                                                }
                                                @if (item.Status == false)
                                                {
                                                    <td>
                                                        <i class="fa fa-frown-o text-danger  mr-2"></i> Pasif
                                                    </td>
                                                }

                                               
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />
                        

                        <a href="/Register/Index" class="btn mb-1 btn-info" target="_blank">
                            Yeni Kullanıcı Girişi <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

