@model AddWorkLocationDto
@{
    ViewData["Title"] = "AddWorkLocation";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <form method="post">
                            <label>Lokasyon Adı</label>
                            <input type="text" class="form-control" placeholder="Otel Adı" asp-for="WorkLocationName">
                            <span asp-validation-for="WorkLocationName" class="text-danger"></span>
                            <br />
                            <label>Şehir</label>
                            <input type="text" class="form-control" placeholder="Şehir" asp-for="WorkLocationCity">
                            <span asp-validation-for="WorkLocationCity" class="text-danger"></span>
                            <br />

                            <button class="btn mb-1 btn-primary">
                                Lokasyonu Ekle <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>

                            <a href="/AdminWorkLocation/Index/" class="btn mb-1 btn-warning">
                                Lokasyonların Listesine Dön <span class="btn-icon-right"><i class="fa fa-backward"></i></span>
                            </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>