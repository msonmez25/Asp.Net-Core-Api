@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="BookingID" />
                            <label>Misafir Ad Soyad</label>
                            <input type="text" class="form-control"  asp-for="Name">
                            <br />
                            <label>Misafir Mail</label>
                            <input type="text" class="form-control"  asp-for="Mail">
                            <br />
                            <label>Misafir Giriş Tarihi</label>
                            <input type="datetime-local" class="form-control" asp-for="CheckIn">
                            <br />
                            <label>Misafir Çıkış Tarihi</label>
                            <input type="datetime-local" class="form-control" asp-for="CheckOut">
                            <br />
                            <label>Misafir Şehir</label>
                            <input type="text" class="form-control"  asp-for="City">
                            <br />
                            <label>Misafir Ülke</label>
                            <input type="text" class="form-control"  asp-for="Country">
                            <br />
                            <label>Yetişkin Sayısı</label>
                            <input type="text" class="form-control"  asp-for="AdultCount">
                            <br />
                            <label>Çocuk Sayısı</label>
                            <input type="text" class="form-control" asp-for="ChildrenCount">
                            <br />
                            <label>Oda Sayısı</label>
                            <input type="text" class="form-control"  asp-for="RoomCount">
                            <br />
                            <label>Durum</label>
                            <input type="text" class="form-control"  asp-for="Status" readonly>
                            <br />
                            <label>Açıklama</label>
                            <textarea class="form-control h-150px" rows="6" asp-for="Description"></textarea>
                            <br />
                            <label>Özel İstekler</label>      
                            <textarea class="form-control h-150px" rows="6" asp-for="SpecialRequest"></textarea>
                            <br />

                            <button class="btn mb-1 btn-success">
                                Rezervasyonu Güncelle <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>

                            <a href="/BookingAdmin/Index/" class="btn mb-1 btn-warning">
                                Rezervasyonlar Listesine Dön <span class="btn-icon-right"><i class="fa fa-backward"></i></span>
                            </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


