@model HotelProject.WebUI.Models.Setting.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kullanıcı Bilgileri Güncelleme Sayfası</h4>
                        <br />



                        <form method="post">

                            <label>Adınız</label>
                            <input type="text" class="form-control" asp-for="Name" required />
                            <br />
                            <label>Soyadınız</label>
                            <input type="text" class="form-control" asp-for="Surname" required />
                            <br />
                            <label>Kullanıcı adınız</label>
                            <input type="text" class="form-control" asp-for="Username"  readonly/>
                            <br />
                            <label>Email Adresiniz</label>
                            <input type="text" class="form-control" asp-for="Email" required />
                            <br />
                            <label>Görsel Link</label>
                            <input type="text" class="form-control" asp-for="ImageUlr" required />
                            <br />
                            <label>Şifreniz</label>
                            <input type="password" class="form-control" asp-for="Password" required/>
                            <br />
                            <label>Şifreniz Tekrar</label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" required/>

                            <br />
                            <button class="btn mb-1 btn-success">
                                Bilgilerimi Güncelle <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

