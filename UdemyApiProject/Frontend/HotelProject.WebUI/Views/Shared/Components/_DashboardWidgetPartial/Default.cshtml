
<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Personel Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.staffCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMMMMMMMMMMM") @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-user-plus"></i></span>
            </div>
        </div>
    </div>
