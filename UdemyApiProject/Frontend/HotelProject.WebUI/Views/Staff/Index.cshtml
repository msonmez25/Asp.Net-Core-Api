<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Personel Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration" id="tbl1">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Personel Adı</th>
                                        <th>Personel Ünvan</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td>@item.Title</td>
                                            <td>
                                                <span>
                                                    <a href="/Staff/UpdateStaff/@item.StaffID" class="btn mb-1 btn-success">
                                                        Güncelle <span class="btn-icon-right"><i class="fa fa-pencil"></i></span>
                                                    </a>

                                                    <a href="/Staff/DeleteStaff/@item.StaffID" class="btn mb-1  btn-danger">
                                                        Sil <span class="btn-icon-right"><i class="fa fa-trash"></i></span>
                                                    </a>                                             
                                                </span>
                                            </td>



                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Staff/AddStaff" class="btn mb-1 btn-info">
                                Yeni Personel Girişi <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



